{
  "compilerOptions": {
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jasmine"
    ],
    "lib": ["es2015", "dom"],
    "outDir": "dist"
  },
  "files": [
    "src/declarations.d.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
